{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "removeComments": true,
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "outDir": "dist",
    "paths": {
      "*": ["./node_modules/*"]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["./src/**/*"],
  "files": ["./types/module-less.d.ts"]
}
